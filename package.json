{
  "name": "asterism-plugin-library",
  "version": "1.6.0",
  "description": "Shared lib to include into asterism plugins",
  "author": "Xavier Gouley <gxapplications@gmail.com>",
  "contributors": [],
  "license": "CC-BY-NC-SA-4.0",
  "scripts": {
    "dist": "rimraf dist && babel lib --out-dir dist",
    "doc": "jsdoc --package package.json --readme docs/HOME.md --destination docs/ lib/*",
    "lint": "standard --verbose | snazzy",
    "prepublishOnly": "npm run lint && npm run dist && npm run doc",
    "validate": "npm ls"
  },
  "main": "dist/index.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/gxapplications/asterism-plugin-library"
  },
  "bugs": {
    "url": "https://github.com/gxapplications/asterism/issues"
  },
  "homepage": "https://github.com/gxapplications/asterism-plugin-library",
  "keywords": [
    "gridifier",
    "react",
    "material",
    "asterism",
    "domotics"
  ],
  "engines": {
    "node": ">= 7.0.0",
    "npm": ">= 3.10.8"
  },
  "babel": {
    "presets": [
      "node7",
      "es2017-node7/webpack2",
      "react-es2015"
    ],
    "env": {
      "development": {
        "plugins": [
          [
            "css-modules-transform",
            {
              "preprocessCss": "./babel-sass-preprocess.js",
              "generateScopedName": "[local]",
              "extractCss": "./dist/styles.css",
              "extensions": [
                ".css",
                ".sass",
                ".scss"
              ]
            }
          ]
        ]
      }
    }
  },
  "standard": {
    "env": {
      "node": true
    },
    "parser": "babel-eslint",
    "ignore": [
      "/docs/"
    ]
  },
  "pre-commit": [
    "lint"
  ],
  "dependencies": {
    "uuid": "3.x"
  },
  "peerDependencies": {
    "prop-types": "15.6.x",
    "react": "15.6.x",
    "react-materialize": "1.0.x"
  },
  "devDependencies": {
    "babel-cli": "6.26.x",
    "babel-core": "6.26.x",
    "babel-eslint": "6.1.x",
    "babel-plugin-css-modules-transform": "1.2.x",
    "babel-preset-es2017-node7": "0.5.x",
    "babel-preset-node7": "1.5.x",
    "babel-preset-react-es2015": "1.3.x",
    "jsdoc": "3.x",
    "node-sass": "4.6.x",
    "precommit-hook": "3.0.0",
    "rimraf": "2.x",
    "snazzy": "7.x",
    "standard": "10.x"
  },
  "directories": {
    "doc": "./docs",
    "lib": "./lib",
    "dist": "./dist"
  },
  "config": {}
}
